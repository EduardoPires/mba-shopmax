@using ShopMax.MVC.Components;
@model ShopMax.MVC.Models.ProductViewModel

@{
	ViewData["Title"] = "Excluir Produto";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>

<div>
	<h4>Esta ação será permanente!</h4>
	<hr />

	<dl class="row">

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nome)
		</dd>

		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.Descricao)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Descricao)
		</dd>

		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.Preco)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Preco)
		</dd>

		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.QuantidadeEstoque)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.QuantidadeEstoque)
		</dd>

		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.Ativo)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Ativo)
		</dd>

		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.Imagem)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Imagem)
		</dd>

		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.DataCadastro)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.DataCadastro)
		</dd>

	</dl>


	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Excluir" class="btn btn-danger" />
		<a class="btn btn-info" asp-action="Index">Voltar</a>
	</form>

</div>
