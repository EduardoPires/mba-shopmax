@model ShopMax.MVC.Models.ProductViewModel

@{
	ViewData["Title"] = "New Product";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
	<div class="col-md-4">
		<form enctype="multipart/form-data" asp-action="Create">

			<input type="hidden" asp-for="SellerId" />

			<vc:Summary></vc:Summary>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="QuantityStock" class="control-label"></label>
				<input asp-for="QuantityStock" class="form-control" />
				<span asp-validation-for="QuantityStock" class="text-danger"></span>
			</div>

			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
				</label>
			</div>

			<div class="form-group">
				<label asp-for="ImageFile" class="control-label"></label>
				<div class="input-group custom-file-button">
					<input type="file" id="ImageFile" asp-for="ImageFile" class="form-control" />
					<label class="input-group-text" for="ImageFile">Search</label>
				</div>
				<span asp-validation-for="ImageFile" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CategoryId" class="control-label"></label>
				<select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
					<option></option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>

			<br/>

			<div class="form-group">
				<input type="submit" value="Register" class="btn btn-primary" />
				<a class="btn btn-info" asp-action="Index">Back</a>
			</div>

		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	<script>
		$("#ImageFile").attr("data-val", "true");
		$("#ImageFile").attr("data-val-required", "The Image field needs to be provided.");
	</script>
}
